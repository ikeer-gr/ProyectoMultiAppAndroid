<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".herramientas">

    <Space
        android:layout_width="match_parent"
        android:layout_height="81dp" />

    <fragment
        android:id="@+id/menu_herramientas"
        android:name="com.example.ikergomezrubio.fragmento_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_fragmento_menu" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cont_herramientas"
        android:gravity="center">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="398dp"
            android:src="@drawable/herramienta" />
    </RelativeLayout>

</LinearLayout>