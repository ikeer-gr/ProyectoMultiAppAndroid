<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/EstiloLinearLayoutPrincipal"
    android:background="#000000"
    tools:context=".Herramientas">

    <!-- Espaciador con estilo -->
    <Space
        style="@style/EstiloEspacio"
        android:layout_height="39dp" />

    <!-- Fragmento del menÃº -->
    <fragment
        android:id="@+id/menu_herramientas"
        android:name="com.example.ikergomezrubio.Fragmento_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_fragmento_menu" />

    <!-- Contenedor centrado -->
    <RelativeLayout
        android:id="@+id/cont_herramientas"
        style="@style/EstiloRelativeLayout">

        <!-- Imagen de herramienta -->
        <ImageView
            android:src="@drawable/herramienta"
            style="@style/EstiloImagen" />

    </RelativeLayout>

</LinearLayout>
