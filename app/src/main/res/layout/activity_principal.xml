<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="16dp"> <!-- Fondo negro -->

    <!-- Encabezado -->

    <!-- Botón de Calculadora -->

    <Space
        android:layout_width="match_parent"
        android:layout_height="82dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="Bienvenido!!"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bcal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="?android:attr/colorAccent"
        android:onClick="ejecutarCalculadora"
        android:text="Calculadora"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textStyle="bold" />

    <!-- Botón de Contador -->
    <Button
        android:id="@+id/bcontador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="?android:attr/colorAccent"
        android:onClick="ejecutarContador"
        android:text="Contador"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textStyle="bold" />

    <!-- Campo de texto del contador -->
    <EditText
        android:id="@+id/valorinicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="?android:attr/colorAccent"
        android:gravity="center"
        android:hint="0"
        android:inputType="number"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textSize="36sp"
        android:textStyle="bold" />

    <!-- Botón de Jugar 3 en Raya -->
    <Button
        android:id="@+id/bjuegos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="?android:attr/colorAccent"
        android:onClick="ejecutarMjuegos"
        android:text="JUEGOS"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textStyle="bold" />


    <!-- Botón de Salir -->
    <Button
        android:id="@+id/b_salir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#B00020"
        android:onClick="salir"
        android:text="Cerrar Aplicación"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</LinearLayout>
