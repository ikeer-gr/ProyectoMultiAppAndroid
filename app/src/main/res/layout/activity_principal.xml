<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Encabezado -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="Bienvenido"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Botón de Calculadora -->
    <Button
        android:id="@+id/bcal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#6200EE"
        android:onClick="ejecutarCalculadora"
        android:text="Calculadora"
        android:textColor="#FFFFFF" />

    <!-- Botón de Contador -->
    <Button
        android:id="@+id/bcontador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#03DAC5"
        android:onClick="ejecutarContador"
        android:text="Contador"
        android:textColor="#FFFFFF" />

    <!-- Campo de texto del contador -->
    <!-- Botón de Jugar 3 en Raya -->
    <EditText
        android:id="@+id/valorinicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#D1D1D1"
        android:gravity="center"
        android:hint="0"
        android:inputType="number"
        android:textColor="#03D9C4"
        android:textColorHint="#03D9C4"
        android:textSize="36sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bjuegos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FF5722"
        android:onClick="ejecutarMjuegos"
        android:text="JUEGOS"
        android:textColor="#FFFFFF" />

    <!-- Botón de Salir -->
    <Button
        android:id="@+id/b_salir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#B00020"
        android:onClick="salir"
        android:text="Cerrar Aplicación"
        android:textColor="#FFFFFF" />
</LinearLayout>
