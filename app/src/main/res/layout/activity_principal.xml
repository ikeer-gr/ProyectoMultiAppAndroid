<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="16dp">

    <include
        android:id="@+id/menu_toolbar"
        layout="@layout/menu_toolbar" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="82dp" />

    <TextView
        android:id="@+id/bienvenido"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="@string/bienvenido"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bcal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="?android:attr/colorAccent"
        android:onClick="ejecutarCalculadora"
        android:text="@string/bcal"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textStyle="bold" />

    <!-- Botón de Contador -->
    <Button
        android:id="@+id/bcontador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="?android:attr/colorAccent"
        android:onClick="ejecutarContador"
        android:text="@string/bcontador"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textStyle="bold" />

    <!-- Campo de texto del contador -->
    <EditText
        android:id="@+id/valorinicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="?android:attr/colorAccent"
        android:gravity="center"
        android:hint="0"
        android:inputType="number"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

    <!-- Botón de Jugar 3 en Raya -->
    <Button
        android:id="@+id/bjuegos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="?android:attr/colorAccent"
        android:onClick="ejecutarMjuegos"
        android:text="@string/bjuegos"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bherramientas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="?android:attr/colorAccent"
        android:onClick="ejecutarherramientas"
        android:text="@string/bherramientas"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textStyle="bold" />

    <!-- Botón de Salir -->
    <Button
        android:id="@+id/b_salir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#B00020"
        android:onClick="salir"
        android:text="@string/b_salir"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</LinearLayout>
