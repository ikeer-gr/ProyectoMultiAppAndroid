<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="58dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <Button
            android:id="@+id/bcal"
            style="@android:style/Widget.Button.Toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ejecutarCalculadora"
            android:text="CALCULADORA" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="87dp" />

        <Button
            android:id="@+id/bcontador"
            style="@android:style/Widget.Button.Toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ejecutarContador"
            android:text="CONTADOR" />

        <EditText
            android:id="@+id/valorinicial"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="48sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="52dp" />

        <Button
            android:id="@+id/b3en"
            style="@android:style/Widget.Button.Toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ejecutar3raya"
            android:text="Jugar 3 en raya" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="114dp" />

        <Button
            android:id="@+id/b_salir"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="salir"
            android:text="CERRAR APLICACION" />
    </LinearLayout>
</LinearLayout>