<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Encabezado -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#333333"
        android:layout_marginBottom="32dp" />

    <!-- Botón de Calculadora -->
    <Button
        android:id="@+id/bcal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculadora"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:onClick="ejecutarCalculadora" />

    <!-- Botón de Contador -->
    <Button
        android:id="@+id/bcontador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contador"
        android:backgroundTint="#03DAC5"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:onClick="ejecutarContador" />

    <!-- Campo de texto del contador -->
    <EditText
        android:id="@+id/valorinicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor Inicial"
        android:gravity="center"
        android:textSize="36sp"
        android:textStyle="bold"
        android:backgroundTint="#D1D1D1"
        android:layout_marginBottom="16dp"
        android:inputType="number" />

    <!-- Botón de Jugar 3 en Raya -->
    <Button
        android:id="@+id/b3en"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jugar 3 en Raya"
        android:backgroundTint="#FF5722"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:onClick="ejecutar3raya" />

    <!-- Botón de Salir -->
    <Button
        android:id="@+id/b_salir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar Aplicación"
        android:backgroundTint="#B00020"
        android:textColor="#FFFFFF"
        android:onClick="salir" />
</LinearLayout>
